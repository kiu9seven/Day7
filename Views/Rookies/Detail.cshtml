@model Person

@{
    ViewData["Title"] = "Member Detail";
    var index = (int)ViewBag.PersonIndex;
}

<div class="row">
    <div class="col-6 offset-3">
        <h1>@ViewData["Title"]</h1>
        <div class="form-group">
            <label asp-for="FirstName"></label>
            <label class="form-control">@Model?.FullName</label>
        </div>
        <div class="form-group">
            <label asp-for="LastName"></label>
            <label class="form-control">@Model?.FullName</label>
        </div>
        <div class="form-group">
            <label asp-for="Gender"></label>
            <label class="form-control">@Model?.Gender</label>
        </div>
        <div class="form-group">
            <label asp-for="DateOfBirth"></label>
            <label class="form-control">@Model?.DateOfBirth.ToString("dd/MM/yyyy")</label>
        </div>
        <div class="form-group">
            <label asp-for="PhoneNumber"></label>
            <label class="form-control">@Model?.PhoneNumber&nbsp;</label>
        </div>
        <div class="form-group">
            <label asp-for="BirthPlace"></label>
            <label class="form-control">@Model?.BirthPlace</label>
        </div>
        <div class="form-group">
            <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
                aria-hidden="true">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <form asp-controller="Rookies" asp-action="Delete" method="post">
                            <div class="modal-header">
                                <h5 class="modal-title" id="exampleModalLabel">Confirmation</h5>
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                            <div class="modal-body">
                                Do you want to delete this item?
                            </div>
                            <div class="modal-footer">
                                <form asp-controller="Rookies" asp-action="DeleteWithResult" asp-route-index="@index" method="post">
                                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                                    <button type="button" class="btn btn-primary">Confirm </button>
                                </form>
                            </div>
                        </form>

                    </div>
                </div>
            </div>
            <a class="btn btn-secondary" asp-controller="Rookies" asp-action="">Back</a>
            <button class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">Delete</button>
            
        </div>
    </div>
</div>
